@startuml

class Ученик {
    - имя: String
    - возраст: int
    + учиться()
    + отдыхать()
}

class Школьник {
    - класс: String
    + учиться()
    + отдыхать()
}

class Студент {
    - специальность: String
    - курс: int
    + учиться()
    + отдыхать()
    + сдаватьЭкзамены()
}

Ученик <|-- Школьник
Ученик <|-- Студент

@enduml
